@model UserInfo
@{
    ViewBag.Title = "Başvuru Formu";  @* Burada Layout'a dinamik olarak sayfanın başlığını gönderdik. *@
}

<h1 class="h4 text-center">Toplantı Katılım Formu</h1>
<form method="post" asp-controller="Meeting" asp-action="Apply">
    <div asp-validation-summary="All"></div> @* Doğrulama hatalarını gösterir. *@
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ad Soyad</label>
        <input asp-for="Name" class="form-control"> @* Razor bu satıra (input type="text")'i otomatik ekler. *@
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Eposta</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Katılım Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet, Geliyorum</option>
            <option value="false">Hayır, Gelmiyorum</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button> @* Form bilgileri ilgili adrese gönderilir.*@
</form>
