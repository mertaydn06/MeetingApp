@* Bu Thanks.cshtml sınıfına dışarıdan erişilememesi için MeetingController sınıfında bu View'e ait bir Action metodu yazmadık. Buraya erişim sadece yönlendirme ile olacak. "return View("Thanks");" *@

@model UserInfo

@{
    ViewBag.Title = "Toplantı Özeti"; @* Burada Layout'a dinamik olarak sayfanın başlığını gönderdik. *@
}

<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>

    @if (Model.WillAttend == true) @* Buraya gönderilen modelin propertysinin doğruluğunu sorguladık. *@
    {
        <p>Teşekkürler, @Model.Name toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
        <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="List">Katılımcıları Listele</a>
    }
    else
    {
        <p>@Model.Name, katılmadığından dolayı üzgünüz.</p>
        <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Formu</a>
    }
</main>
